<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/toolbar"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    style="@style/ThemeOverlay.AppCompat.Dark"
    android:background="#3A54E4"/>

     <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
     android:layout_gravity="center"
     android:text="Đổi mật khẩu"
               android:padding="10dp"
     android:layout_marginTop="10dp"
     android:textSize="22sp"
     android:textColor="#3F51B5"/>
    <androidx.cardview.widget.CardView
            android:layout_marginTop="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            app:cardCornerRadius="15dp"
            android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:hint="Enter Pass"

                    app:passwordToggleEnabled="true"
                     android:textColorHint="@android:color/background_dark"
                    android:layout_width="match_parent"
                                                                   android:layout_height="wrap_content">
                <EditText android:layout_width="match_parent"
                          android:textSize="18sp"
                          android:inputType="textPassword"
                          android:textColor="@android:color/background_dark"
                          android:shadowColor="@android:color/background_dark"
                          android:layout_height="wrap_content"
                android:id="@+id/editpass"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:hint="Enter Repeat Pass"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:passwordToggleEnabled="true"
                     android:textColorHint="@android:color/background_dark"
                    android:layout_width="match_parent"
                                                                   android:layout_height="wrap_content">
                <EditText android:layout_width="match_parent"
                          android:textSize="18sp"
                          android:inputType="textPassword"
                          android:textColor="@android:color/background_dark"
                          android:shadowColor="@android:color/background_dark"
                          android:layout_height="wrap_content"
                android:id="@+id/editpass1"/>
            </com.google.android.material.textfield.TextInputLayout>

             <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
             android:layout_gravity="center"
                     android:text="Save"
                     android:textSize="16sp"
                     android:id="@+id/btnsave"
                     android:textAllCaps="false"
                     android:background="@drawable/custom_back_ground"
                     android:textColor="@android:color/white"
                     android:layout_marginBottom="10dp"
             android:layout_marginTop="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>