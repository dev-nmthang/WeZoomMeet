<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:background="#2E47D6"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <com.wonderkiln.camerakit.CameraView android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/camera"/>

    <com.airbnb.lottie.LottieAnimationView android:layout_width="120dp"
                                           android:layout_height="120dp"
                                           android:layout_alignParentBottom="true"
                                           android:layout_centerHorizontal="true"
                                           android:layout_marginBottom="25dp"
                                           app:lottie_rawRes="@raw/cancel"
                                           app:lottie_autoPlay="true"
                                           app:lottie_loop="true"
                                           app:lottie_speed="1.5"
                                           android:id="@+id/cancel"

    />
</RelativeLayout>